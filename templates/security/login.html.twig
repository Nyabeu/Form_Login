{% extends 'base.html.twig' %}

{% block body %}


<div class="container my-5" style="width: 20%;box-shadow: 15px 5px 15px green;background: rgb(254, 254, 226);">

    <h1 class="text-center text-success my-4" style="text-shadow: 5px 5px 5px pink">Connexion</h1>
	
    <form method="post">
	  
		{% if error %}
        <div class="alert alert-danger">{{  error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
      <div class="form_group">
        <label for="username" class="control-label">Identifiant | Pseudo</label>
        <input type="text" name="username" id="username" class="form-control" value="{{ last_username }}" required autofocus>
      </div>
      <div class="form_group">
        <label for="password" class="control-label">Mot de passe</label>
        <input type="password" name="password" id="password" class="form-control" required>
      </div>
      
	  
	  	<input type="hidden" name="_csrf_token"
			   value="{{ csrf_token('authenticate') }}"
		> 
		
      <button type="submit" class="btn btn-primary my-2 ml-5"style="border-radius: 20px;">Se Connecter</button>
    </form>
</div>

{% endblock %}
